{
	"name": "test-generator",
	"displayName": "Test Generator",
	"description": "Generate test files in directories",
	"publisher": "joelpod",
	"repository": {
		"type": "git",
		"url": "https://github.com/ajoelp/vscode-test-generator.git"
	},
	"version": "1.3.0",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:test-generator.generateTest"
	],
	"icon": "icon.png",
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "test-generator.generateTest",
				"title": "Generate Test File"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceLangId == typescript",
					"command": "test-generator.generateTest",
					"group": "2_workspace"
				},
				{
					"when": "resourceLangId == javascript",
					"command": "test-generator.generateTest",
					"group": "2_workspace"
				},
				{
					"when": "resourceLangId == typescriptreact",
					"command": "test-generator.generateTest",
					"group": "2_workspace"
				},
				{
					"when": "resourceLangId == javascriptreact",
					"command": "test-generator.generateTest",
					"group": "2_workspace"
				},
				{
					"when": "resourceLangId == vue",
					"command": "test-generator.generateTest",
					"group": "2_workspace"
				}
			]
		},
		"configuration": {
			"properties": {
				"test-generator.testDirectory": {
					"type": "string",
					"default": "tests",
					"description": "Test Directory"
				},
				"test-generator.noTestDirectory": {
					"type": "boolean",
					"default": false,
					"description": "Create files in the same location as the source file?"
				},
				"test-generator.fileSuffix": {
					"type": "string",
					"default": "spec",
					"description": "Suffix for test files"
				},
				"test-generator.sourceRoot": {
					"type": "string",
					"default": "./src",
					"desciption": "Root directory for your code"
				},
				"test-generator.testSnippet": {
					"type": "array",
					"default": null,
					"desciption": "Test snippet"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"test": "jest",
		"deploy": "vsce publish"
	},
	"devDependencies": {
		"@types/fs-extra": "^9.0.1",
		"@types/jest": "^28.1.6",
		"@types/node": "^18.6.0",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^5.30.7",
		"@typescript-eslint/parser": "^5.30.7",
		"eslint": "^8.20.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"prettier": "^2.0.5",
		"ts-jest": "^28.0.7",
		"ts-loader": "^9.3.1",
		"typescript": "^4.7.4",
		"vsce": "^2.10.0",
		"vscode-test": "^1.3.0",
		"webpack": "^5.76.0",
		"webpack-cli": "^4.10.0"
	},
	"dependencies": {
		"fs-extra": "^10.1.0",
		"jest": "^28.1.3",
		"lodash": "^4.17.19"
	}
}
